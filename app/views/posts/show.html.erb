<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
	<% @post.comments.each do |c| %>
	   <p>Comment : <%= c.comment %> | <%= link_to "Reply", post_comments_post_path(c) %>
          <% c.replies.each do |r| %>
              <p><%= r.comment %></p>
          <% end %> 
	   </p>
	<% end %> 
</p>

<p><%= link_to :comment , post_comments_post_path(@post) %></p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
